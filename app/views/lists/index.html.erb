<h1>Lists</h1>

<table>
  <tr>
    <th>
      <h2>Name</h2>
    </th>
  </tr>
  <% @lists.each do |list| %>
    <tr>
      <td>
        <h3><%= list.name %></h3>
      </td>
      <td>
        <%= link_to 'Show', list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

</br></br><%= link_to 'Add new list', new_list_path, class: "btn btn-primary" %>
