<%= form_for(@list) do |form| %>
  <%= form.label :name %>:
  <%= form.text_field :name %><br/>

  <% @list.children.each do |child| %>
    <%= form.fields_for :children, child do |f| %>
      <%= render "child_fields", f: f, child: child %>
    <% end %>
  <% end %>
  <%= link_to_add_fields "Add", form, :children %><br>

  <%= form.submit class: "btn btn-success"%>
<% end %>









