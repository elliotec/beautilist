<fieldset>
  <%= f.label :text, "Step: " %>
  <%= f.text_field :text %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>

<fieldset>
  Sub-list

      <%#= child.label :name %>
      <%= child.text_field :name %><br>
      <%= f.hidden_field :_destroy %>
      <%= link_to "remove", '#', class: "remove_fields" %>
      <%= f.select :parent_id, nested_set_options(List, @list) {|i| "#{'-' * i.level} #{i.name}" } %>
      <%= f.submit "Save" %>
    <% end %>
  <% end %>
</fieldset>
